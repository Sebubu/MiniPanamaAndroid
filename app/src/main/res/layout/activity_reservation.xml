<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.hsr.sevi.minipanamaandroid.Reservation"
    android:columnCount="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/res_title"
        android:id="@+id/textView6"
        android:layout_gravity="left|top"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0/3"
        android:id="@+id/res_lblQuantity"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_gravity="right|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/res_txtSearch"
        android:contentDescription="search"
        android:autoText="false"
        android:layout_row="1"
        android:layout_column="0"
        android:hint="Suchen"
        android:layout_rowSpan="1"
        android:layout_columnSpan="2"
        android:layout_gravity="top" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/res_listViewHeader"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/res_listView"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="top"
        android:headerDividersEnabled="false"
        android:choiceMode="singleChoice"
        android:fastScrollAlwaysVisible="false"
        android:fastScrollEnabled="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/res_btnReservieren_text"
        android:id="@+id/res_btnReservieren"
        android:singleLine="true"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="top" />

</GridLayout>
